-(void)ontime{
    tim--;
    [self.yanbtn setTitle:[NSString stringWithFormat:@"%ds",tim] forState:UIControlStateNormal];
    if (self.timer!=nil) {
        if (tim<=0) {
            [self.timer invalidate];
            self.timer=nil;
            [self.yanbtn setTitle:@"获取验证码" forState:UIControlStateNormal];
            tim=time_int;
            self.yanbtn.userInteractionEnabled=YES;
        }
        
    }
}
